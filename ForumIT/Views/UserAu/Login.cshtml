@model ForumIT.Models.DTO.LoginDTO



@section Test{
    <aside class="col-md-3 sidebar97239" style="margin-top:100px">
        <div class="categori-part329">
            <img src="/1Forum/image/logoApp.png" alt="Logo" width="200px" height="100px">
        </div>
    </aside>
    }

<div class="modal-wrap">

    <div class="modal-bodies">
        <div class="modal-body modal-body-step-1 is-showing">
            <div class="title">Log In</div>
            <div class="description">Hello there, Log In</div>
            <form asp-action="Login" method="post">

                <div class="form-group last mb-4">
                    <!--label>User Name</!--label-->
                    <input type="text" class="form-control" asp-for="UserName" placeholder="Name" />
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>

                <div class="form-group last mb-4">
                    <!--label>Password</!--label-->
                    <input type="password" class="form-control" asp-for="Password" placeholder="Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>


                <input type="submit" value="Login" class="button">

                <a href="/UserAu/Register"><div class="button">Create an account</div></a>
            
            </form>
            
        </div>


    </div>
</div>


